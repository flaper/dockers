{
  "settings": {
    "analysis": {
      "filter": {
        "ru_stop": {
          "type": "stop",
          "stopwords": "_russian_"
        },
        "ru_stemmer": {
          "type": "stemmer",
          "language": "russian"
        }
      },
      "analyzer": {
        "default": {
          "char_filter": [
            "html_strip"
          ],
          "tokenizer": "standard",
          "filter": [
            "lowercase",
            "ru_stop",
            "ru_stemmer"
          ]
        }
      }
    }
  },
  "mappings": {
    "object": {
      "properties": {
        "mainDomain": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "created": {
          "type": "date",
	  "index": "not_analyzed"
        }
      }
    }
  }
}
